{
  "name": "Python 3",
  "extensions": [
    "ms-toolsai.jupyter",     // Jupyter extension
],
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "runArgs": [
    "-v",
    "/var/run/docker.sock:/var/run/docker.sock"
  ],
  "postCreateCommand": "colrev install all_internal_packages && for repo in pandoc/latex:3.1.13 lfoppiano/grobid:0.8.1 jbarlow83/ocrmypdf:latest; do docker pull $repo; done;",
  "customizations": {
    "codespaces": {
      "openFiles": [".devcontainer/tutorial.ipynb"]
    },
    "vscode": {
      "extensions": [
        "markdown.showPreview",
        "mhutchie.git-graph",
        "mathematic.vscode-pdf",
        "searKing.preview-vscode"
      ],
      "settings": {
        "markdown.extension.preview.autoShowPreviewToSide": true,
        "markdown.extension.print.theme": "dark",
        "workbench.colorTheme": "Default Dark+",
        "window.autoDetectColorScheme": true
      }
    }
  }
}
